---
import { postEntries } from "@utils/contentEntries";
import LayoutContent from "@layouts/LayoutContent.astro";
import ListCardBlog from "@components/content/ListCardBlog.astro";
const PAGE_TITLE = "博客 - A cup of Minteea 🍵";
const PAGE_DESCRIPTION = "Minteea的个人博客";
---

<LayoutContent pageTitle={PAGE_TITLE} pageDescription={PAGE_DESCRIPTION}>
  <h1>博客</h1>
  <ul class="flex flex-col gap-2">
    {
      postEntries.map(({ slug, data }) => (
        <li>
          <ListCardBlog link={`/post/${slug}`} data={data} />
        </li>
      ))
    }
  </ul>
</LayoutContent>
