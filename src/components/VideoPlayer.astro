---
import MfunsVideoPlayer from "./MfunsVideoPlayer";

interface Props {
  title: string;
  videoParts: string[];
  themeColor?: string;
}

const { title, videoParts, themeColor } = Astro.props;
---

<MfunsVideoPlayer
  client:only="solid-js"
  videoParts={videoParts}
  title={title}
  themeColor={themeColor}
/>
<style is:global>
  .mfuns-player .mfuns-player-videotime {
    width: 140px;
  }
  .mfuns-player .mfuns-player-danmakubar {
    display: none;
  }
</style>
